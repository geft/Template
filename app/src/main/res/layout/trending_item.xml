<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/avatar_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextItemAuthor"
            app:layout_constraintStart_toEndOf="@id/image_avatar"
            app:layout_constraintTop_toTopOf="@id/image_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="36dp"
            android:background="@color/grey"
            />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/TextItemName"
            app:layout_constraintStart_toStartOf="@id/text_author"
            app:layout_constraintEnd_toEndOf="@id/text_author"
            app:layout_constraintTop_toBottomOf="@id/text_author"
            android:layout_marginTop="16dp"
            android:background="@color/grey"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/text_name"
            app:layout_constraintEnd_toEndOf="@id/text_name"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <TextView
                android:id="@+id/text_description"
                style="@style/TextItemDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="[Description]"
                />

            <ImageView
                android:id="@+id/image_language"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:padding="4dp"
                android:src="@drawable/ic_language"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/text_description"
                app:layout_constraintStart_toStartOf="@id/text_description"
                />

            <TextView
                android:id="@+id/text_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextItemLanguage"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/image_language"
                app:layout_constraintStart_toEndOf="@id/image_language"
                tools:text="[C++]"
                />

            <ImageView
                android:id="@+id/image_star"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/star_yellow_16"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/text_language"
                app:layout_constraintStart_toEndOf="@id/text_language"
                />

            <TextView
                android:id="@+id/text_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextItemLanguage"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/image_star"
                app:layout_constraintStart_toEndOf="@id/image_star"
                tools:text="14,236"
                />

            <ImageView
                android:id="@+id/image_fork"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/fork_black_16"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@id/text_star"
                app:layout_constraintStart_toEndOf="@id/text_star"
                />

            <TextView
                android:id="@+id/text_fork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextItemLanguage"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@id/image_fork"
                app:layout_constraintStart_toEndOf="@id/image_fork"
                tools:text="4,376"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@id/container_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="21dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>