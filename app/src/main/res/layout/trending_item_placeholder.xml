<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/placeholder_avatar"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/image_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/image_bottom"
        />

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="100dp"
        android:layout_height="12dp"
        android:src="@drawable/placeholder_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_avatar"
        />

    <ImageView
        android:id="@+id/image_bottom"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:src="@drawable/placeholder_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintTop_toBottomOf="@id/image_top"
        app:layout_constraintStart_toStartOf="@id/image_top"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="21dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/image_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>